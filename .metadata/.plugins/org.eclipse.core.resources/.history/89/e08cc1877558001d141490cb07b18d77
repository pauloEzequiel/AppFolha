		Funcionario  func1 = new Funcionario(null,"Paulo Ezequiel","Analista","ARACAJU-SE",new ArrayList<Pagamento>());
		Funcionario  func2 = new Funcionario(null,"Jos√© Tavares","Analista","ARACAJU-SE",new ArrayList<Pagamento>());
